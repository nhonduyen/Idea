<style>
    tr > th {
        text-align: center;
        font-size: 100%;
    }

    #tbKpi, #tbKpi1 td {
        text-align: center;
        margin-bottom: 0px;
    }

    .result, .target, .kmonth {
        padding: 6px;
    }

    .rmonth {
        padding: 6px !important;
    }

    .modal-body {
        max-height: calc(120vh - 212px);

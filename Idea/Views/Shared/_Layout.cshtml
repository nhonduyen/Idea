@using System.Data;
@using System.Web.Optimization;
@{
    ViewBag.Title = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="Improvement Idea System">
    <meta name="author" content="Nguyen Nhon Duyen">
    <link rel="icon" href="@Url.Content("~/favicon.ico")">

    <title>PROJECT MANAGEMENT</title>

    <!-- Bootstrap core CSS -->

    <link rel="stylesheet" href="@Url.Content("~/Content/bt/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bt/datepicker.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/site.css")" />
    <!-- DataTables CSS -->
    <link href="@Url.Content("~/Content/bt/dataTables.bootstrap.css")" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="@Url.Content("~/Content/bt/selectize.bootstrap3.css")" rel="stylesheet">
</head>

<body>
    <style>
        .datepicker {
            z-index: 1151 !important;
        }
    </style>
    <input type="hidden" id="username" value="@Session["Username"]" data-dept="@Session["Dept"]" data-name="@Session["Name"]" data-div="@Session["Division"]" />
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">POSCO VST</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li id="lhome">
                        <a href="@Url.Action("Index", "Home")">Main</a>
                    </li>

                </ul>
                @if (Session["Username"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">

                        <li><a href="#">@Session["Name"].ToString()</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="glyphicon glyphicon-user"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li class="active"><a href="@Url.Action("ChangePassword", "Home")">Change Password</a></li>
                                <li><a href="@Url.Action("Logout", "Home")">Log out</a></li>
                            </ul>
                            <!-- /.dropdown-user -->
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li data-toggle="modal" data-target="#mdLogin"><a href="#"><span class="glyphicon glyphicon-log-in"></span>&nbsp;Login</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <header class="banner">
        <div class="container-fluid">
            <h2 class="margin0"><span class="glyphicon glyphicon-star"></span>&nbsp;VST PROJECT MANAGEMENT</h2>
        </div>
    </header>
    <div class="content container-fluid">

        @RenderBody()


    </div>
    <footer>
        <div class="container-fluid">
            <span>Copyright &copy; 2018 - POSCO VST</span>
        </div>
    </footer>
    <script src="@Url.Content("~/Scripts/Include/modernizr-3.5.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/plugins.js")"></script>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/Include/jquery-1.11.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/bootstrap-datepicker.js")"></script>

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="@Url.Content("~/Scripts/Include/ie10-viewport-bug-workaround.js")"></script>
    <!-- DataTables JavaScript -->
    <script src="@Url.Content("~/Scripts/Include/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/selectize.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/bootbox.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Include/moment.min.js")"></script>
    @RenderSection("Scripts", false)
</body>

</html>
@RenderSection("Modals", false)
@if (Session["Username"] == null)
{
    <!-- Modal Login -->
    <div id="mdLogin" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span>&nbsp;Login</h4>
                </div>
                <div class="modal-body">
                    <span class="text-info">Your default password is 123.</span>
                    <div id="divWarn" class="alert alert-danger" style="display: none;">
                        Please enter correct ID, Password and Department.
                    </div>
                    <form id="frmLogin" role="form" method="post">
                        <div class="form-group">
                            <label for="username">Employee ID:</label>
                            <input type="text" class="form-control" maxlength="6" name="userid" id="userid" placeholder="Enter ID" required />
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" name="pwd" id="pwd" placeholder="Enter password" required />
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <!-- End Modal -->
}
<script>
    $(document).ready(function () {
        $('.dropdown ul li').hover(function () {
            $(this).addClass('active');
        }, function () {
            $(this).removeClass('active');
        });
        $("#frmLogin").submit(function () {
            $("#divWarn").hide();
            var id = $("#userid").val().trim();
            var pwd = $("#pwd").val().trim();

            if (id.length == 0 || pwd.length == 0) {
                bootbox.alert("Please enter correct ID and Password.");
                return false;
            }
            var emp = { EMP_ID: id, EMP_PW: pwd };

            $.ajax({
                url: "@Url.Action("Login", "Home")",
                data: JSON.stringify({
                    emp: emp
                }),
                type: 'POST',
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                crossBrowser: true,
                success: function (data, status) {

                    if (data) {
                        window.location.reload();
                    }
                    else {
                        bootbox.alert("Login fail. Please enter correct ID and Password");
                    }
                    return false;
                },
                error: function (xhr, status, error) {
                    bootbox.alert("Error! " + xhr.status);
                },
            });
            return false;
        });
        // end ready
    });
</script>
